---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<dev class="title"><h1><a href="/">{SITE_TITLE}</a></h1></dev>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: linear-gradient(45deg, #ddf5ff, #ebf8e1,#ffd8c5);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h1 {
		margin: 1em 0;
		font-size: 2em;
	}

	h1 a,
	h1 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: center;
		height: 10%;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}

	.title {
		font-family: 'Anta';
	}
</style>
