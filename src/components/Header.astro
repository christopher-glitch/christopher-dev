---
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h1 class="site-title"><a href="/">{SITE_TITLE}</a></h1>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: linear-gradient(45deg, #ddf5ff, #ebf8e1,#ffd8c5);
		box-shadow: 0 5px 8px rgba(var(--black), 20%);
	}
	h1 {
		margin: 1em 0;
		font-size: 2em;
	}

	h1 a,
	h1 a.active {
		text-decoration: none;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-around;
		height: 10%;
	}
	nav a {
		padding: 0.5em 0.5em;
		color: var(--black);
		border-bottom: 2px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

	.site-title {
		font-family: 'Anta';
	}

	@media (max-width: 424px) {
		h1 {
			font-size: 1em;
		}
	}

	
</style>
